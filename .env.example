# =============================================================================
# COMPOSIO CONFIGURATION
# =============================================================================
COMPOSIO_API_KEY=your_composio_api_key_here

# =============================================================================
# GOOGLE SHEETS CONFIGURATION
# =============================================================================
# Path to Google Service Account JSON file or OAuth credentials
GOOGLE_SHEETS_CREDENTIALS_JSON=./credentials/google_sheets_service_account.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_google_sheets_spreadsheet_id_here

# Alternative OAuth Configuration (if not using service account)
# GOOGLE_SHEETS_CLIENT_ID=your_oauth_client_id_here
# GOOGLE_SHEETS_CLIENT_SECRET=your_oauth_client_secret_here
# GOOGLE_SHEETS_REFRESH_TOKEN=your_oauth_refresh_token_here

# =============================================================================
# NOTION CONFIGURATION
# =============================================================================
NOTION_TOKEN=your_notion_integration_token_here
NOTION_DB_ID=your_notion_database_id_here

# =============================================================================
# EMAIL CONFIGURATION (Gmail/SMTP)
# =============================================================================
# Gmail Configuration
GMAIL_SMTP_HOST=smtp.gmail.com
GMAIL_SMTP_PORT=587
GMAIL_USER=your_email@gmail.com
GMAIL_PASSWORD_OR_TOKEN=your_gmail_app_password_here

# Email Recipients
MANAGER_EMAIL=manager@company.com

# Alternative Generic SMTP Configuration
# SMTP_HOST=your_smtp_host_here
# SMTP_PORT=587
# SMTP_USER=your_smtp_user_here
# SMTP_PASSWORD=your_smtp_password_here
# SMTP_USE_TLS=true
# SMTP_USE_SSL=false

# =============================================================================
# SUPPLIER API CONFIGURATION (Optional)
# =============================================================================
SUPPLIER_API_KEY=your_supplier_api_key_here
SUPPLIER_API_BASE_URL=https://api.supplier.com/v1

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Webhook and server configuration
APP_HOST=localhost
APP_PORT=8000
APP_BASE_URL=http://localhost:8000

# Application Configuration
APP_NAME=Inventory Replenishment Copilot
APP_VERSION=1.0.0
LOG_LEVEL=INFO
DEBUG_MODE=false

# Database Configuration (if needed)
DATABASE_URL=sqlite:///inventory.db

# Agent Configuration
AGENT_CHECK_INTERVAL=3600  # seconds (1 hour)
INVENTORY_THRESHOLD_PERCENTAGE=20  # reorder when stock is below 20%
MAX_RETRY_ATTEMPTS=3
NOTIFICATION_CHANNELS=email,notion

# Security
SECRET_KEY=your_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here